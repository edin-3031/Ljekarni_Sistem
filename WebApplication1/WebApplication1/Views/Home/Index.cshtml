@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/image/icon.png">
    <style>
        html, body {
            height: 90%;
            width: 90%;
            margin: auto;
        }

        body {
            background-image: url("/image/bg.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        #pacijenti, #ljekari, #prijemi {
            position: relative;
            display: inline-flex;
            height: 350px;
            width: 350px;
            border: 1px solid black;
            margin-top: 19%;
            left: 6%;
            margin-left: 4.5%;
            filter: opacity(70%);
            background-color: white;
            border-radius: 20px;
            border: 4px solid black;
            cursor: pointer;
        }

            #pacijenti:hover, #ljekari:hover, #prijemi:hover {
                filter: opacity(100%);
                transition: all ease 1000ms;
                box-shadow: 0px 0px 55px 10px rgb(73, 172, 255)
            }

            #pacijenti img, #ljekari img, #prijemi img {
                height: 250px;
                width: 250px;
                position: relative;
                margin: auto;
            }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
    <body>
        <div id="pacijenti" title="Pacijenti"><img src="~/image/patient.png"></div>
        <div id="ljekari" title="Ljekari"><img src="~/image/icons8-stethoscope-90.png"></div>
        <div id="prijemi" title="Prijemi"><img src="~/image/file.png"></div>
        
        <script>
            $(document).ready(function () {
                $("#pacijenti").hide().delay(300).fadeIn(1000);
                $("#ljekari").hide().delay(600).fadeIn(1000);
                $("#prijemi").hide().delay(900).fadeIn(1000);
            });

            $("#pacijenti").click(function () {
                window.location.href = "/Pacijent/Prikaz";
            });

            $("#ljekari").click(function () {
                window.location.href = "/Ljekar/Prikaz";
            });

            $("#prijemi").click(function () {
                window.location.href = "/Prijem/Prikaz";
            });
        </script>
    </body>
</html>