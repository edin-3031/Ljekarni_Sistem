@model WebApplication1.Models.Ljekar

@{
    ViewData["Title"] = "Unos";

    List<Titula>titule=(List<Titula>) ViewData["titule"];
}
<link rel="stylesheet" href="~/css/errorStyle.css"/>

<h1>Unos</h1>

<h4>Ljekar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UnosSnimi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input onkeydown="enable()" id="ime" asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" id="span_ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input onkeydown="enable()" id="prezime" asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" id="span_prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifra" class="control-label"></label>
                <input onkeydown="enable()" id="sifra" asp-for="Sifra" class="form-control" />
                <span asp-validation-for="Sifra" id="span_sifra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="titula_FK" class="control-label"></label>
                <select onchange="enable()" id="titula" asp-for="titula_FK" class="form-control" asp-items="ViewBag.titula_FK">

                    <option value="0">---Odaberite---</option>
                    <option disabled="disabled"></option>
                    @foreach (var x in titule)
                    {
                        <option value="@x.TitulaID">@x.Naziv</option>
                    }
                </select>
                <span asp-validation-for="titula_FK" id="span_titula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onmouseover="check()" id="snimi" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/js/Ljekar/Unos.js"></script>