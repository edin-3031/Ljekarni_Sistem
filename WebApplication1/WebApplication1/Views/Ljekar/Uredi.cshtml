@model WebApplication1.Models.Ljekar

@{
    ViewData["Title"] = "Uredi";

    List<Titula> titule = (List<Titula>)ViewData["titule"];
    Ljekar ljekar = (Ljekar)ViewData["ljekar"];
}
<link rel="stylesheet" href="~/css/errorStyle.css" />

<h1>Uredi</h1>

<h4>Ljekar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UrediSnimi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LjekarID" value="@ljekar.LjekarID" />
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input onkeydown="enable()" id="ime" asp-for="Ime" class="form-control" value="@ljekar.Ime" />
                <span id="span_ime" asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input onkeydown="enable()" id="prezime" asp-for="Prezime" class="form-control" value="@ljekar.Prezime" />
                <span id="span_prezime" asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifra" class="control-label"></label>
                <input onkeydown="enable()" id="sifra" asp-for="Sifra" class="form-control" value="@ljekar.Sifra" />
                <span id="span_sifra" asp-validation-for="Sifra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="titula_FK" class="control-label">Titula</label>
                <select onchange="enable()" id="titula" asp-for="titula_FK" class="form-control" asp-items="ViewBag.titula_FK">
                    <option value="@ljekar.titula.TitulaID">@ljekar.titula.Naziv</option>
                    <option disabled="disabled"></option>
                    @foreach (var x in titule)
                    {
                        <option value="@x.TitulaID">@x.Naziv</option>
                    }
                </select>
                <span asp-validation-for="titula_FK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" onmouseover="check()" id="snimi" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/js/Ljekar/Uredi.js"></script>